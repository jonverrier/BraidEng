{
   "compilerOptions": {
      "target": "ES2022",
      "lib": [ "ES2022", "dom" ],
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "module": "CommonJS",        
      "noEmitOnError": true,
      "removeComments": false,
      "sourceMap": true,
      "jsx": "react",
      "isolatedModules": true,    
      "moduleResolution": "Node"
   },
   "include": [
      "./core/**/*.ts",
      "./core/**/*.tsx",
      "./test/**/*.test.ts"
   ],
   "exclude": [
      "./node_modules"
   ],
   "awesomeTypescriptLoaderOptions": {
      "useCache": true,
      "useBabel": true
   },
   "strictPropertyInitialization": true,
   "ts-node": {
      // Tell ts-node CLI to install the --loader automatically
      "esm": true
    }
}