{
    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Mocha Tests",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
            "--debug-brk",
            "--require",
            "ts-node/register",
            "${workspaceFolder}/test/**/activity*.test.ts"
   
          ],
          "internalConsoleOptions": "openOnSessionStart",
          "skipFiles": [
          "<node_internals>/**"
          ]
        },      
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/scripts"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: test_web_pipeline",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "scripts/test/test_web_pipeline.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/scripts"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: test_youtube_pipeline",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "scripts/test/test_youtube_pipeline.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/scripts"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
